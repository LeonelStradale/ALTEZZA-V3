---
import Background from "../../utils/Background.astro";
---

<section id="about" class="h-screen opacity-0 transition-opacity duration-700 ease-out">
    <div class="gap-8 items-center lg:py-8 px-4 mx-auto max-w-screen-xl xl:gap-16 md:grid md:grid-cols-2 sm:py-16 lg:px-6">
        <img class="w-full dark:hidden" src="/img/team.png" alt="Imagen de Equipo">
        <img class="w-full hidden dark:block" src="/img/team.png" alt="Imagen de Equipo">
        <div class="mt-4 md:mt-0">
            <Background />
            <h2 class="mb-4 text-4xl tracking-tight font-extrabold text-gray-900 dark:text-white">
                Somos
                <span class="text-transparent bg-clip-text bg-gradient-to-r to-emerald-600 from-sky-400">
                    Altezza
                </span>
            </h2>
            <p class="mb-6 font-normal text-gray-900 md:text-lg dark:text-gray-100">
                Bienvenido a Altezza, donde la innovación se encuentra con la excelencia. Somos una agencia de
                marketing y desarrollo de software comprometida con el éxito de tu empresa. Nuestra misión es
                simple: ayudarte a alcanzar tus metas comerciales con soluciones efectivas y resultados tangibles.
            </p>
        </div>
    </div>
</section>

<script>
    document.addEventListener("DOMContentLoaded", function () {
      const section = document.getElementById("about");
  
      const observerOptions = {
        root: null,
        rootMargin: '0px',
        threshold: 0.3
      };
  
      const observerCallback = (entries, observer) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.classList.add("animate-fade-in-up");
            observer.unobserve(entry.target); 
          }
        });
      };
  
      const observer = new IntersectionObserver(observerCallback, observerOptions);
      observer.observe(section);
    });
</script>